<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/constraint_2_editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraint_2_imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/constraint_2_imageView"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/constraint_2_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraint_2_button"
        app:layout_constraintLeft_toRightOf="@+id/constraint_2_editText"
        app:layout_constraintRight_toLeftOf="@+id/constraint_2_space"
        app:layout_constraintTop_toBottomOf="@+id/constraint_2_editText" />


    <Space
        android:id="@+id/constraint_2_space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/constraint_2_button"
        app:layout_constraintLeft_toRightOf="@id/constraint_2_imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_2_editText" />

    <Button
        android:id="@+id/constraint_2_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/constraint_2_imageView"
        app:layout_constraintTop_toBottomOf="@+id/constraint_2_imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>
